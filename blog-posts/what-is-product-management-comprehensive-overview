<!-- BEGIN Toc-------------------- -->
  <script defer>

    document.addEventListener("DOMContentLoaded", () => {
      const smoothScrollLinks = document.querySelectorAll('.tocitem');

      smoothScrollLinks.forEach(link => {
        link.addEventListener('click', smoothScroll);
      });

      function smoothScroll(e) {
        e.preventDefault();
        const targetId = this.getAttribute("href");
        const targetElement = document.querySelector(targetId);

        if (targetElement) {
          const lazyImages = targetElement.querySelectorAll('img[loading="lazy"]');
          if (lazyImages.length > 0) {

            const lazyImagesLoaded = Array.from(lazyImages).map(img => {
              return new Promise(resolve => {
                if (img.complete) {
                  resolve();
                } else {
                  img.addEventListener('load', resolve);
                  img.addEventListener('error', resolve); 
                }
              });
            });

            Promise.all(lazyImagesLoaded).then(() => {
              scrollToTarget(targetElement, 3000);
            });
          } else {
            scrollToTarget(targetElement, 3000);
          }
        }
      }

      function scrollToTarget(target, duration) {
        const targetPosition = target.getBoundingClientRect().top;
        const startPosition = window.pageYOffset;
        const distance = targetPosition - startPosition;
        let startTime = null;

        function animation(currentTime) {
          if (startTime === null) startTime = currentTime;
          const timeElapsed = currentTime - startTime;
          const run = ease(timeElapsed, startPosition, distance, duration);
          window.scrollTo(0, run);
          if (timeElapsed < duration) requestAnimationFrame(animation);
        }

        function ease(t, b, c, d) {
          t /= d / 2;
          if (t < 1) return c / 2 * t * t + b;
          t--;
          return -c / 2 * (t * (t - 2) - 1) + b;
        }

        requestAnimationFrame(animation);
      }
    });



    const observerToc = new IntersectionObserver(entries => {
      entries.forEach(entry => {
        const id = entry.target.getAttribute("id");
        if (entry.isIntersecting) {
          document.querySelectorAll(".tocitem.active-toc").forEach(z => {
            z.classList.remove("active-toc");
          });
          const activeLink = document.querySelector(`a[href="#${id}"]`);
          if (activeLink) activeLink.classList.add("active-toc");
        }
      });
    }, { rootMargin: '0px 0px -75% 0px' });


    document.addEventListener("DOMContentLoaded", () => {
      const headings = document.getElementById("richtextfield").querySelectorAll("h2");

      const unorderedList = document.createElement("ul");


      headings.forEach((heading) => {
        observerToc.observe(heading);


        const headingId = heading.textContent.trim().toLowerCase().replace(/[^\w\s-]/g, '').replace(/\s+/g, '-');
        heading.setAttribute("id", headingId);


        const listItem = document.createElement("li");
        const linkItem = document.createElement("a");


        linkItem.textContent = heading.textContent.trim();
        linkItem.classList.add("tocitem");
        linkItem.setAttribute("href", `#${headingId}`);

        listItem.appendChild(linkItem);
        unorderedList.appendChild(listItem);
      });

      document.getElementById("tocNum").appendChild(unorderedList);
    });
</script>
